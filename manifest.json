{
    "manifest_version": 3,
    "name": "Pomodoro Site Blocker",
    "version": "1.0",
    "description": "A Chrome extension to block sites for a focused work session using a Pomodoro-like timer.",
    "permissions": [
      "storage",  
      "webRequest", 
      "webRequestBlocking",  
      "declarativeNetRequest",
      "activeTab",
      "tabs"
    ],
    "action": {
      "default_popup": "index.html"
    },
    "background": {
      "service_worker": "blocking.js"  
    },
    "host_permissions": [
      "*://*/*"  
    ],
    "icons": {
      "16": "icons/icon16.png",  
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  