{
    "manifest_version": 3,
    "name": "Pomodoro Site Blocker",
    "version": "1.0",
    "description": "A Chrome extension to block sites for a focused work session using a Pomodoro-like timer.",
    "permissions": [
      "storage",  
      "declarativeNetRequest",  
      "activeTab",
      "tabs"
    ],
    "action": {
      "default_popup": "index.html"  
    },
    "background": {
      "service_worker": "blocking.js"  
    },
    "host_permissions": [
      "*://*/*"  
    ],
    "icons": {
      "16": "pomodoro-technique_12238217.png",  
      "48": "pomodoro-technique_12238217.png", 
      "128": "pomodoro-technique_12238217.png"  
    },
    "default_popup_width": 600,  
    "default_popup_height": 400 
  }

  